<ColorPicker
    title="background"
    defaultColor={color}
    setColor={setColor}
/>
<ColorPicker
    title="body text"
    defaultColor={textColor}
    setColor={setTextColor}
/>
<Separator/>
    <ColorPicker
    title="username text"
    defaultColor={userNameText}
    setColor={setUserNameText}
/>


const [color, setColor] = useState("#ffff");
const [textColor, setTextColor] = useState("#000");
const [userNameText, setUserNameText] = useState("#000");
